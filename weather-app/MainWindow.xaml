<Window x:Class="weather_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Погода" Height="800" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="CleanTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CleanButton" TargetType="Button">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Background" Value="#28a745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style x:Key="ForecastCard" TargetType="Border">
            <Setter Property="Background" Value="#e3f2fd"/>
            <Setter Property="BorderBrush" Value="#90caf9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#343a40"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#007bff" Padding="20,15">
            <TextBlock Text="Погода" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Поиск -->
        <Border Grid.Row="1" Background="White" Padding="15,10" BorderBrush="#dee2e6" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="CityTextBox" 
                        Text="Новосибирск" 
                        Style="{StaticResource CleanTextBox}"
                        Grid.Column="0"
                        KeyDown="CityTextBox_KeyDown"/>

                <Button x:Name="SearchButton" 
                        Content="Search" 
                        Style="{StaticResource CleanButton}"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Click="SearchButton_Click"/>

                <Button x:Name="SaveCityButton" 
                        Content="⭐ Сохранить" 
                        Style="{StaticResource SaveButton}"
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        Click="SaveCityButton_Click"/>
            </Grid>
        </Border>

        <!-- Погода -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>

                <!-- Локация и время -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock x:Name="CityTextBlock" 
                              Text="Новосибирск" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#212529"/>

                    <TextBlock x:Name="CountryTextBlock" 
                              Text="Russia" 
                              FontSize="16" 
                              Foreground="#6c757d"
                              Margin="0,2,0,0"/>

                    <TextBlock x:Name="TimeTextBlock" 
                              Text="2025-11-24 06:35" 
                              FontSize="12" 
                              Foreground="#adb5bd"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Температура и иконки -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="TempTextBlock" 
                                  Text="0°C" 
                                  FontSize="36" 
                                  FontWeight="Bold"
                                  Foreground="#212529"/>

                        <TextBlock x:Name="FeelsLikeTextBlock" 
                                  Text="Ощущается как 0°C" 
                                  FontSize="14" 
                                  Foreground="#6c757d"
                                  Margin="0,2,0,0"/>
                    </StackPanel>

                    <Image x:Name="WeatherIcon" 
                          Grid.Column="1"
                          Width="64" 
                          Height="64"/>
                </Grid>

                <!-- Описание погоды -->
                <Border Style="{StaticResource MetricCard}" Margin="0,0,0,15">
                    <TextBlock x:Name="DescTextBlock" 
                              Text="Clear sky" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#495057"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Основные метрики погоды -->
                <TextBlock Text="📊 Основные параметры" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- влажность -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="0" Margin="0,0,5,10">
                        <StackPanel>
                            <TextBlock Text="💧 Влажность" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="HumidityTextBlock" 
                                      Text="0%" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Давление -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,10">
                        <StackPanel>
                            <TextBlock Text="📊 Давление" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="PressureTextBlock" 
                                      Text="0 hPa" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Видимость -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="👁️ Видимость" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="VisibilityTextBlock" 
                                      Text="0 km" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Облачность -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="☁️ Облачность" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="CloudTextBlock" 
                                      Text="0%" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Параметры ветра -->
                <TextBlock Text="💨 Ветер" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Скорость ветра -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="0" Margin="0,0,5,10">
                        <StackPanel>
                            <TextBlock Text="Скорость" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="WindTextBlock" 
                                      Text="0 км/ч" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Направление ветра -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Направление" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="WindDirTextBlock" 
                                      Text="N 0°" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Порывы ветра -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="Порывы" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="GustTextBlock" 
                                      Text="0 км/ч" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Температура с учетом ветра -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Ощущ. темп." 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="WindchillTextBlock" 
                                      Text="0°C" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Дополнительные параметры -->
                <TextBlock Text="🌡️ Дополнительно" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Осадки -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="0" Margin="0,0,5,10">
                        <StackPanel>
                            <TextBlock Text="🌧️ Осадки" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="PrecipTextBlock" 
                                      Text="0 мм" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Точка росы -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,10">
                        <StackPanel>
                            <TextBlock Text="💦 Точка росы" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="DewpointTextBlock" 
                                      Text="0°C" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Индекс жары -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="🔥 Индекс жары" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="HeatindexTextBlock" 
                                      Text="0°C" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- УФ индекс -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="☀️ УФ индекс" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="UVTextBlock" 
                                      Text="0" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Астрономия (сегодня) -->
                <TextBlock Text="🌅 Астрономия" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Восход -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="0" Margin="0,0,5,10">
                        <StackPanel>
                            <TextBlock Text="🌅 Восход" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="SunriseTextBlock" 
                                      Text="--:--" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Закат -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,10">
                        <StackPanel>
                            <TextBlock Text="🌇 Закат" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="SunsetTextBlock" 
                                      Text="--:--" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Восход луны -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="0" Margin="0,0,5,10">
                        <StackPanel>
                            <TextBlock Text="🌙 Восход луны" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="MoonriseTextBlock" 
                                      Text="--:--" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Заход луны -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="1" Margin="5,0,0,10">
                        <StackPanel>
                            <TextBlock Text="🌑 Заход луны" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="MoonsetTextBlock" 
                                      Text="--:--" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Фаза луны -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="2" Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="🌓 Фаза луны" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="MoonPhaseTextBlock" 
                                      Text="--" 
                                      FontSize="14" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Освещенность луны -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="💡 Освещенность" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="MoonIllumTextBlock" 
                                      Text="0%" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Прогноз на 3 дня -->
                <TextBlock Text="📅 Прогноз на 3 дня" Style="{StaticResource SectionHeader}"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,20">
                    <StackPanel x:Name="ForecastPanel" Orientation="Horizontal">
                    </StackPanel>
                </ScrollViewer>

            </StackPanel>
        </ScrollViewer>
        
        <!-- статус бар -->
        <Border Grid.Row="3" Background="#f8f9fa" Padding="10,5" BorderBrush="#dee2e6" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" 
                          Text="Готов к поиску" 
                          FontSize="11" 
                          Foreground="#6c757d"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
    </Grid>
</Window>