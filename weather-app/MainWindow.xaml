<Window x:Class="weather_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Погода" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style x:Key="CleanTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CleanButton" TargetType="Button">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#007bff" Padding="20,15">
            <TextBlock Text="Погода" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Поиск -->
        <Border Grid.Row="1" Background="White" Padding="15,10" BorderBrush="#dee2e6" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="CityTextBox" 
                        Text="Новосибирск" 
                        Style="{StaticResource CleanTextBox}"
                        Grid.Column="0"
                        KeyDown="CityTextBox_KeyDown"/>

                <Button x:Name="SearchButton" 
                        Content="Search" 
                        Style="{StaticResource CleanButton}"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        Click="SearchButton_Click"/>
            </Grid>
        </Border>

        <!-- Погода -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>

                <!-- Локация и время -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock x:Name="CityTextBlock" 
                              Text="Новосибирск" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#212529"/>

                    <TextBlock x:Name="CountryTextBlock" 
                              Text="Russia" 
                              FontSize="16" 
                              Foreground="#6c757d"
                              Margin="0,2,0,0"/>

                    <TextBlock x:Name="TimeTextBlock" 
                              Text="2025-11-24 06:35" 
                              FontSize="12" 
                              Foreground="#adb5bd"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Температура и иконки -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="TempTextBlock" 
                                  Text="0°C" 
                                  FontSize="36" 
                                  FontWeight="Bold"
                                  Foreground="#212529"/>

                        <TextBlock x:Name="FeelsLikeTextBlock" 
                                  Text="Ощущается как 0°C" 
                                  FontSize="14" 
                                  Foreground="#6c757d"
                                  Margin="0,2,0,0"/>
                    </StackPanel>

                    <Image x:Name="WeatherIcon" 
                          Grid.Column="1"
                          Width="64" 
                          Height="64"/>
                </Grid>

                <!-- Описание погоды -->
                <Border Style="{StaticResource MetricCard}" Margin="0,0,0,15">
                    <TextBlock x:Name="DescTextBlock" 
                              Text="Clear sky" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#495057"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Метрики погоды -->
                <Grid Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- влажность -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="0" Margin="0,0,5,10">
                        <StackPanel>
                            <TextBlock Text="💧 Влажность" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="HumidityTextBlock" 
                                      Text="0%" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Ветер -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="0" Grid.Column="1" Margin="5,0,0,10">
                        <StackPanel>
                            <TextBlock Text="💨 Ветер" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="WindTextBlock" 
                                      Text="0 км/ч" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Давление -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="📊 Давление" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="PressureTextBlock" 
                                      Text="0 hPa" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Видимость -->
                    <Border Style="{StaticResource MetricCard}" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="👁️ Видимость" 
                                      FontSize="12" 
                                      Foreground="#6c757d"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="VisibilityTextBlock" 
                                      Text="0 km" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#212529"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- УФ индекс -->
                <Border Background="#fff3cd" BorderBrush="#ffeaa7" BorderThickness="1" CornerRadius="8" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="☀️" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="УФ индекс" 
                                      FontSize="12" 
                                      Foreground="#856404"
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="UVTextBlock" 
                                      Text="0" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#856404"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- статус бар -->
        <Border Grid.Row="3" Background="#f8f9fa" Padding="10,5" BorderBrush="#dee2e6" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock x:Name="StatusTextBlock" 
                          Text="Готов к поиску" 
                          FontSize="11" 
                          Foreground="#6c757d"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
    </Grid>
</Window>